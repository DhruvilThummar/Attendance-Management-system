# Copy to .env and adjust for your Supabase project

# Flask runtime
FLASK_APP=attendance_system.app
FLASK_ENV=development

# Supabase/Postgres connection settings
SECRET_KEY=change-me
DATABASE_URL=postgresql://postgres:YOUR_SUPABASE_PASSWORD@db.YOUR_PROJECT_ID.supabase.co:5432/postgres?sslmode=require&connect_timeout=10&application_name=attendance-system&keepalives=1&keepalives_idle=30&keepalives_interval=10&keepalives_count=5

# Connection pool tuning (used by init_db_pool)
DB_POOL_MIN=1
DB_POOL_MAX=5

# Timeouts (in seconds / milliseconds respectively)
DB_CONN_TIMEOUT=10
DB_STATEMENT_TIMEOUT_MS=5000

# Report storage paths (relative to repo root)
REPORTS_DIR=attendance_system/static/reports
BACKUP_DIR=attendance_system/static/reports/backups

# Keep server times consistent
TZ=UTC
