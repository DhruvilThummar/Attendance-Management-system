# Flask runtime
FLASK_APP=attendance_system.app
FLASK_ENV=development

# Supabase/Postgres connection settings
SECRET_KEY=change-me
# MySQL connection settings
DATABASE_URL=mysql://root:password@localhost:3306/attendance_db

# Connection pool tuning (used by init_db_pool)
DB_POOL_MIN=1
DB_POOL_MAX=5

# Timeouts (in seconds / milliseconds respectively)
DB_CONN_TIMEOUT=10
DB_STATEMENT_TIMEOUT_MS=5000

# Report storage paths (relative to repo root)
REPORTS_DIR=attendance_system/static/reports
BACKUP_DIR=attendance_system/static/reports/backups

# Keep server times consistent
TZ=UTC
